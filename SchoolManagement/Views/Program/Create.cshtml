@model AddProgram

@{ 
    ViewBag.Title = "Add new program";
}

@inject SchoolDbContext context;

    <div>
        <h1>ĐĂNG KÝ CHƯƠNG TRÌNH</h1>
        <form asp-controller="Program" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <fieldset>
                <legend>Thông tin chương trình</legend>
                <div class="row form-group">
                    <label asp-for="ProgramName" class="col-2"></label>
                    <div class="col-10">
                        <input asp-for="ProgramName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="ProgramName" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>

